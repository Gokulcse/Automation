package pages;

import java.util.Properties;

import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.PageFactory;

import pageobjects.BellOrderSummaryPO;
import pageobjects.BellReviewConfirmPO;
import utilitymethods.UtilityMethods;
import driver.BaseDriver;

public class BellOrderSummary 
{
	public static FirefoxDriver driver =BaseDriver.driver;
	static Properties allInputValue;
	public static void Start() throws Exception 
	{
		allInputValue = UtilityMethods.getBellPropValues();
		PageFactory.initElements(driver, BellOrderSummaryPO.class);
	}
	
	public static void validateOperatorLogo()
	{
		UtilityMethods.DisplayEnableValidator(BellOrderSummaryPO.BellLogo, "NotEqual","Bell Operator Logo in IoT Starter Kit");	
		UtilityMethods.Imagevalidation(BellOrderSummaryPO.BellLogo,"src",allInputValue.getProperty("bellLogo"),"Bell Operator Logo");		
		System.out.println("RC001");
	} 
	
	public static void validateCompanyLogo()
	{	
		UtilityMethods.DisplayEnableValidator(BellOrderSummaryPO.CiscoLogo, "NotEqual","Cisco Jasper Company Logo in IoT Starter Kit");		
		UtilityMethods.Imagevalidation(BellOrderSummaryPO.CiscoLogo,"src",allInputValue.getProperty("ciscoLogo"),"Cisco Jasper Company Logo");		
		System.out.println("RC002");
	}
	
	public static void HeadertextValidation()
	{
		UtilityMethods.StringValidation(BellOrderSummaryPO.OrderIotHeaderText.getText(), "Order IoT Starter Kit", "equalsignorecase");
		UtilityMethods.StringValidation(BellOrderSummaryPO.SectionOneHead4.getText(), "Order Summary", "equalsignorecase");
		UtilityMethods.StringValidation(BellOrderSummaryPO.YourInfoText.getText(), "Your Information", "equalsignorecase");
		UtilityMethods.StringValidation(BellOrderSummaryPO.ShppingText.getText(), "Shipping", "equalsignorecase");
		UtilityMethods.StringValidation(BellOrderSummaryPO.PaymentText.getText(), "Payment", "equalsignorecase");
		UtilityMethods.StringValidation(BellOrderSummaryPO.ReviewConfirmText.getText(), "Review & Confirm", "equalsignorecase");
		System.out.println("RC003");
	}
	
	
}
